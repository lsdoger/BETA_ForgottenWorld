<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= TOP BAR ================= -->
        <Border Grid.Row="0"
                Background="#CC000000"
                CornerRadius="0,0,0,0"
                BorderBrush="White"
                BorderThickness="0,0,0,1"
                MouseDown="TopMenu_MouseDown">

            <Grid>
                <TextBlock Text="ForgottenWorld"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           FontWeight="Bold"/>

                <Button Content="✕"
                        HorizontalAlignment="Right"
                        Width="40"
                        Margin="0,0,5,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Button_Close_Click"/>
            </Grid>
        </Border>

        <!-- ================= MAIN CONTENT ================= -->
        <Border Grid.Row="1"
                CornerRadius="0,0,15,15"
                Background="#FF0E0E0E">

            <Grid>

                <!-- ===== BACKGROUND IMAGE (FULL, NORMAL) ===== -->
                <Image
                    Source="pack://application:,,,/Assets/bg.jpg"
                    Stretch="UniformToFill"
                    Panel.ZIndex="0"/>

                <!-- ===== DARK OVERLAY (читабельність) ===== -->
                <Rectangle Panel.ZIndex="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#AA000000" Offset="0"/>
                            <GradientStop Color="#FF000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- ===== LOGIN FORM ===== -->
                <Border
                    Width="440"
                    Height="320"
                    Background="Transparent"
                    CornerRadius="5"
                    BorderBrush="White"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Panel.ZIndex="2">

                    <StackPanel Margin="30">

                        <!-- Username -->
                        <TextBox
                            Height="40"
                            Margin="0,0,0,15"
                            Foreground="White"
                            Background="#111111"
                            BorderBrush="White"
                            BorderThickness="1"
                            FontSize="14"
                            Padding="10"
                            Text="Username"/>

                        <!-- Password -->
                        <TextBox
                            Height="40"
                            Margin="0,0,0,25"
                            Foreground="White"
                            Background="#111111"
                            BorderBrush="White"
                            BorderThickness="1"
                            FontSize="14"
                            Padding="10"
                            Text="Password"
                            TextChanged="TextBox_TextChanged"/>
                        <Button
                            Height="45"
                            Content="PLAY"
                            FontWeight="Bold"
                            FontSize="15"
                            Foreground="White"
                            Background="#1E1E1E"
                            BorderBrush="White"
                            BorderThickness="1"
                            Cursor="Hand">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#333333"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#111111"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- PLAY -->

                    </StackPanel>
                </Border>

            </Grid>
        </Border>

    </Grid>
</Window>
